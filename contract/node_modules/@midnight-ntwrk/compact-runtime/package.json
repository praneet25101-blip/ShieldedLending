{
  "author": "IOG",
  "dependencies": {
    "@midnight-ntwrk/onchain-runtime-v2": "^2.0.0",
    "@types/object-inspect": "^1.8.1",
    "object-inspect": "^1.12.3"
  },
  "description": "Compact Runtime",
  "devDependencies": {
    "@types/node": "^22.15.29",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.2",
    "glob": "^11.0.1",
    "prettier": "^3.4.2",
    "typedoc": "^0.28.1",
    "typedoc-plugin-markdown": "4.6.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.19.0",
    "vitest": "^3.2.1"
  },
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "name": "@midnight-ntwrk/compact-runtime",
  "nixDependencies": [
    "@midnight-ntwrk/onchain-runtime-v2"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/midnight-ntwrk/artifacts.git"
  },
  "scripts": {
    "build": "npm run clean; CHEZSCHEMELIBDIRS=\"$CHEZSCHEMELIBDIRS:../compiler:../third_party/compiler\" scheme --script export-version.ss; tsc -b",
    "check": "npm run build && npm run format:check",
    "clean": "rm -rf tsconfig.tsbuildinfo && rm -rf ./dist || :",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "generate-docs": "rm -rf ../doc/api/runtime && npx typedoc --plugin typedoc-plugin-markdown src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "npm run build",
    "test": "npm run build && vitest run"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "version": "0.14.0"
}